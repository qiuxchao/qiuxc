{
	"private": true,
	"scripts": {
		"build": "turbo run build",
		"build:eslint": "turbo run build --filter=eslint-config",
		"build:prettier": "turbo run build --filter=prettier-config",
		"dev": "turbo run dev --no-cache --continue",
		"dev:docs": "turbo run dev --no-cache --continue --filter={./apps/docs}... --filter=!eslint-config",
		"dev:eslint": "turbo run dev --no-cache --continue --filter=eslint-config",
		"lint": "turbo run lint",
		"clean": "turbo run clean && rm -rf node_modules",
		"format": "prettier --write \"**/*.{ts,tsx,md}\"",
		"changeset": "changeset",
		"version-packages": "changeset version",
		"release": "turbo run build --filter=docs^... && changeset publish",
		"prepare": "husky install"
	},
	"lint-staged": {
		"package.json": "sort-package-json"
	},
	"devDependencies": {
		"@babel/core": "^7.22.11",
		"@babel/eslint-parser": "^7.22.11",
		"@babel/preset-react": "^7.22.5",
		"@types/eslint": "^8.44.2",
		"@types/prettier": "^3.0.0",
		"@types/react": "^18.0.30",
		"@types/react-dom": "^18.0.11",
		"@changesets/cli": "^2.26.2",
		"eslint": "^8.48.0",
		"@qiuxc/eslint-config": "workspace:*",
		"@qiuxc/eslint-plugin": "workspace:*",
		"@qiuxc/prettier-config": "workspace:*",
		"eslint-plugin-simple-import-sort": "^10.0.0",
		"husky": "^8.0.3",
		"lint-staged": "^14.0.1",
		"prettier": "^3.0.3",
		"sort-package-json": "^2.5.1",
		"eslint-config-prettier": "^9.0.0",
		"turbo": "^1.10.13",
		"typescript": "^5.2.2",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"eslint-plugin-react": "^7.33.2",
		"@typescript-eslint/parser": "^6.5.0",
		"@typescript-eslint/eslint-plugin": "^6.5.0",
		"tsup": "^7.2.0"
	},
	"packageManager": "pnpm@10.15.1",
	"prettier": "@qiuxc/prettier-config"
}
