{
  "name": "@qiuxc/eslint-config",
  "description": "qiuxchao 的 ESLint 规则",
  "version": "0.0.6",
  "keywords": [
    "eslint",
    "eslintrc",
    "config"
  ],
  "homepage": "https://github.com/qiuxchao/qiuxc/tree/main/packages/eslint-config",
  "repository": {
    "type": "git",
    "url": "https://github.com/qiuxchao/qiuxc/tree/main/packages/eslint-config"
  },
  "author": "qiuxchao",
  "contributors": [],
  "main": "index.js",
  "license": "MIT",
  "files": [
    "index.js",
    "base.js",
    "react.js",
    ".prettierrc.js",
    ".prettierignore",
    "typescript.js",
    "vue.js",
    "custom.js"
  ],
  "scripts": {
    "start": "pnpm dev",
    "dev": "run-p dev:*",
    "dev:eslintrc": "chokidar \"test/**/*.{js,jsx,ts,tsx,vue,json}\" \"scripts/**/*.ts\" -c \"pnpm build:eslintrc\"",
    "dev:copyfiles": "pnpm build:copyfiles && chokidar \"site/public/**/*\" -c \"pnpm build:copyfiles\"",
    "dev:webpack-dev-server": "webpack serve --open",
    "build": "run-s build:*",
    "build:eslintrc": "ts-node scripts/build.ts",
    "build:clean": "rimraf dist",
    "build:copyfiles": "copyfiles -u 2 \"site/public/**/*\" dist/public",
    "build:site": "webpack",
    "clean": "rimraf dist node_modules && pnpm -r exec rm -rf node_modules dist",
    "test": "pnpm lint && ts-node ./test/index.ts",
    "lint": "run-s eslint prettier",
    "eslint": "eslint --ext .js,.jsx,.ts,.tsx,.vue --ignore-pattern \"bad.*\" .",
    "prettier": "prettier -l \"./**/*\"",
    "prettier:fix": "prettier --write -l \"./**/*\"",
    "update": "pnpm up --latest",
    "rulesCoverage": "ts-node ./scripts/rulesCoverage.ts"
  },
  "devDependencies": {
    "@qiuxc/eslint-plugin": "workspace:*",
    "@qiuxc/prettier-config": "workspace:*",
    "@babel/core": "^7.22.11",
    "@babel/eslint-parser": "^7.22.11",
    "@babel/preset-react": "^7.22.5",
    "@types/cookie": "^0.5.1",
    "@types/doctrine": "^0.0.5",
    "@types/eslint": "^8.18.0",
    "@types/node": "^20.5.7",
    "@types/prettier": "^3.0.0",
    "@types/react": "^18.0.30",
    "@types/react-dom": "^18.0.11",
    "@types/rimraf": "^3.0.2",
    "@types/xml-escape": "^1.1.1",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@types/qs": "^6.9.8",
    "chokidar-cli": "^3.0.0",
    "cookie": "^0.5.0",
    "copyfiles": "^2.4.1",
    "doctrine": "^3.0.0",
    "eslint": "^8.18.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-vue": "^9.17.0",
    "html-webpack-plugin": "^5.5.0",
    "insert-tag": "^0.1.2",
    "mobi-plugin-color": "^1.0.0",
    "mobi.css": "^3.1.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-tooltip": "^4.5.1",
    "rimraf": "^3.0.2",
    "ts-loader": "^9.4.2",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.0",
    "url": "^0.11.0",
    "vue-eslint-parser": "^9.3.1",
    "webpack": "^5.76.3",
    "webpack-cli": "^5.0.1",
    "webpack-dev-server": "^4.13.1",
    "xml-escape": "^1.1.0",
    "qs": "^6.11.2"
  },
  "peerDependencies": {
    "@qiuxc/eslint-plugin": "latest",
    "eslint-plugin-vue": ">=9.0.0",
    "typescript": "4.x || 5.x",
    "vue-eslint-parser": ">=9.0.0",
    "eslint-plugin-simple-import-sort": ">=10.0.0",
    "@babel/eslint-parser": "7.x",
    "@babel/preset-react": "7.x",
    "@typescript-eslint/eslint-plugin": ">=5.14.0",
    "@typescript-eslint/parser": "5.x",
    "eslint": ">=8.18.0",
    "eslint-plugin-react": ">=7.30.1"
  },
  "peerDependenciesMeta": {
    "@qiuxc/eslint-plugin": {
      "optional": true
    },
    "@babel/eslint-parser": {
      "optional": true
    },
    "@babel/preset-react": {
      "optional": true
    },
    "@typescript-eslint/eslint-plugin": {
      "optional": true
    },
    "@typescript-eslint/parser": {
      "optional": true
    },
    "eslint-plugin-react": {
      "optional": true
    },
    "eslint-plugin-vue": {
      "optional": true
    },
    "typescript": {
      "optional": true
    },
    "vue-eslint-parser": {
      "optional": true
    }
  },
  "publishConfig": {
    "access": "public"
  }
}
